@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
    ViewBag.Title = "Add Pokemon";
}
@model WebUi.Models.Pokemon
<form asp-action="Add">
    <div>
        <label asp-for="Nom"></label>
        <input asp-for="Nom"  />
        <span asp-validation-for="Nom"></span>
    </div>
    <div>
        <select asp-for="Type">
            <option value="Eau">Eau</option>
            <option value="Feu">Feu</option>
            <option value="Herbe">Herbe</option>
        </select>
        <span asp-validation-for="Type"></span>

    </div>
    <div>
        <label asp-for="Niveau"></label>
        <input asp-for="Niveau"  />
        <span asp-validation-for="Niveau"></span>
    </div>
    <button type="submit">Ajouter un Pokemon</button>

</form>